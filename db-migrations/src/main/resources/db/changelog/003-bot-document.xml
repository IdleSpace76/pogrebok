<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="003-1-create-seq-bot-document" author="azharov">
        <createSequence sequenceName="bot_document_seq" incrementBy="1" startValue="1"/>

        <rollback>
            <dropSequence sequenceName="bot_document_seq"/>
        </rollback>
    </changeSet>

    <changeSet id="003-2-create-table-bot-document" author="azharov">
        <createTable tableName="bot_document">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="telegram_id" type="VARCHAR(255)"/>
            <column name="doc_name" type="VARCHAR(1024)"/>
            <column name="binary_content_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="mime_type" type="VARCHAR(255)"/>
            <column name="file_size" type="BIGINT"/>
        </createTable>

        <rollback>
            <dropTable tableName="bot_document"/>
        </rollback>
    </changeSet>

    <changeSet id="003-3-fk-indexes-bot-document" author="azharov">
        <addForeignKeyConstraint
                baseTableName="bot_document"
                baseColumnNames="binary_content_id"
                referencedTableName="binary_content"
                referencedColumnNames="id"
                constraintName="fk_bot_document_binary_content"
                onDelete="CASCADE"/>

        <rollback>
            <dropForeignKeyConstraint baseTableName="bot_document" constraintName="fk_bot_document_binary_content"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
